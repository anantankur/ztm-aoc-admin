  <% include ./partials/header %>

  <% include ./partials/navbar %>

  <div class="ui main text container segment">
    <div class="ui huge header">Edit</div>
    <form class="ui form" action="/links/<%= blog._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Category</label>
        <span class="custom-dropdown">
          <select name="blog[category]" value="<%= blog.category %>" id='nnnn'>
              <option value='javascript'>Javascript</option>
              <option value='java'>Java</option>
              <option value='python'>Python</option>
              <option value='ruby'>Ruby</option>
              <option value='csharp'>C#</option>
              <option value='random'>Random</option>
          </select>
        </span>
      </div>
      <div class="field">
        <label>Name</label>
        <input type="text" name="blog[userName]" value="<%= blog.userName %>" required />
      </div>
      <div class="field">
        <label>UserID</label>
        <input type="text" name="blog[userid]" value="<%= blog.userid %>" required />
      </div>
      <div class="field">
        <label>DayNumber</label>
        <input type="text" name="blog[dayNumber]" value="<%= blog.dayNumber %>" required />
      </div>
      <div class="field">
        <label>URL</label>
        <input type="url" name="blog[url]" value="<%= blog.url %>" required />
      </div>
      <div class="field">
        <label>Avatar Url</label>
        <input type="url" name="blog[avatarUrl]" value="<%= blog.avatarUrl %>" required />
      </div>

    <input class="ui violet big basic button" type="submit" value="Update"/>
    </form>
  </div>

<% include ./partials/footer %>