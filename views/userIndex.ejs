<% include ./partials/header %>

<% /* navbar specifically for index route starts */ %>
  <div class="ui secondary menu">
    <div class="ui container">
      <div class="zheader item"><i class="code"></i>Zero To Mastery</div>

        <a href="/links" class="item">Home</a>
        <div class="right menu">
          <a href="/logout" class="ui item">
            logout
          </a>
        </div>
      
    </div>
  </div>
<% /* navbar ends */ %>


<div class="middle">
<div class="ui main text container">
  <div class="ui huge header">Zero-To-Mastery AOC-2018</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% user.forEach(function(el){ %>
        <div class="item">
          <div class="content">
              <a class="header" href="/links/<%= el._id %>/edit"><%= el.url_text %></a>
              <div class="descrption cf">
                <div class="fl disp">
                  <p>Name: -> <%- el.username %></p>
                  <p>UserID: -> <%- el.userid %></p>
                  <p>Points: -> <%- el.point %></p>
                  <p><a href=<%- el.avatarUrl %> target="_blank" rel="noopener noreferrer">Avatar: -> <%- el.avatarUrl.substring(0, 28) %>....</a></p>
                </div><br />
                <div class="fr">
                  <img src="<%- el.avatarUrl %>" width="60px" height="60px" />
                </div>
              </div>
              <div class="extra">
                  <a class="ui orange basic button" href="/users/<%= el._id %>/edit">Edit</a>
                  <form id="delete" action="/users/<%= el._id %>?_method=DELETE" method="POST">
                    <button class="ui red basic button" onclick="return confirm('Are you sure, you want to delete?')">Delete</button>
                  </form>
              </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>
</div>

<% include ./partials/footer %>