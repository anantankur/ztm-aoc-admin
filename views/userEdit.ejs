  <% include ./partials/header %>

  <% include ./partials/navbar %>

  <div class="middle">
    <div class="ui main text container segment">
      <div class="ui huge header">Edit</div>
      <form class="ui form" action="/users/<%= users._id %>?_method=PUT" method="POST">
        <div class="field">
          <label>Name</label>
          <input type="text" name="users[userName]" value="<%= users.username %>" required />
        </div>
        <div class="field">
          <label>UserID</label>
          <input type="text" name="users[userid]" value="<%= users.userid %>" required />
        </div>
        <div class="field">
          <label>Points</label>
          <input type="number" name="users[point]" value="<%= users.point %>" required />
        </div>
        <div class="field">
          <label>Badge Point</label>
          <input type="number" name="users[badgePoint]" value="<%= users.badgePoint %>" required />
        </div>
        <div class="field">
          <label>Avatar Url</label>
          <input type="url" name="users[avatarUrl]" value="<%= users.avatarUrl %>" required />
        </div>

      <input class="ui violet big basic button" type="submit" value="Update" onclick="return confirm('Are you sure, you want to edit?')"/>
      </form>
    </div>
  </div>

<% include ./partials/footer %>
